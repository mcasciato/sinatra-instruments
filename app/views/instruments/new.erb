<div class="container">
  <h1>Add an Instrument to Your Collection!</h1>

  <form role="textbox" action="/instruments" method="POST">
    <div class="prompt">
       <input type="text" name="name" id="name" class="form-control input-lg" placeholder="Instrument Name">
    </div>
     <br>
     <div class="prompt">
        <textarea name="description" id="description" class="form-control input-lg" placeholder="Instrument Description"></textarea>
     </div>
     <br>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Add Instrument</button>
    </div>
  </form>
</div>
