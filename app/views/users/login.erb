<div class="container">
  <% if flash[:message] != nil %>
    <h2><small> <%= flash[:message] %> </small></h2>
  <%end%>

  <h2>Log in below:</h2><br>
  <form role="textbox" action="/login" method="POST">
    <div class="prompt">
      <div class="input-group">
        <div class="input-group-addon">
          <span class="glyphicon glyphicon-user"></span>
        </div>
        <input type="text" name="username" id="username" class="form-control input-lg" placeholder="Username">
      </div>
    </div>
     <br>
     <div class="prompt">
       <div class="input-group">
         <div class="input-group-addon">
           <span class="glyphicon glyphicon-lock"></span>
         </div>
         <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password">
       </div>
     </div>
     <br>
    <div class="prompt">
      <button type="submit" class="btn btn-primary">Log In</button>
    </div>
  </form>

  <br>

  <h3>Don't have an account?</h3>
    <a href="/signup" class="btn btn-info" role="button"><span class="glyphicon glyphicon-user"></span> Sign Up</a>
</div>
