<div class="container">

  <% if flash[:message] != nil %>
  <h2><small> <%= flash[:message] %> </small></h2>
  <%end%>

  <h2>Sign up below:</h2><br>

  <div class="signup-wrapper">
      <div class="signup-box">
        <form role="textbox" action="/signup" method="POST">
          <div class="prompt">
            <div class="input-group">
              <div class="input-group-addon">
                <span class="glyphicon glyphicon-user"></span>
              </div>
              <input type="text" name="username" id="username" class="form-control input-lg" placeholder="Username">
            </div>
          </div>
          <br>
           <div class="prompt">
             <div class="input-group">
               <div class="input-group-addon">
                 <span class="glyphicon glyphicon-envelope"></span>
               </div>
               <input type="text" name="email" id="email" class="form-control input-lg" placeholder="Email">
             </div>
           </div>
           <br>
           <div class="prompt">
             <div class="input-group">
               <div class="input-group-addon">
                 <span class="glyphicon glyphicon-lock"></span>
               </div>
               <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password">
             </div>
           </div>
           <br>
           <div class="prompt">
            <input type="submit" value="Sign Up" class="btn btn-primary">
          </div>
         </form>
      </div>
   </div>
  <h3>Already have an account?</h3>
      <a href="/login" class="btn btn-info" role="button"><span class="glyphicon glyphicon-log-in"></span> Log In</a>
</div>
